<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top"
    android:padding="5dp"
    android:background="#cccccc">

    <android.support.v7.widget.CardView
        android:id="@+id/view1"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >


            <ImageView
                android:id="@+id/image_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView_number_friends"
                android:src="@drawable/ic_action_edit" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Amount:"
                android:textColor="@color/ColorPrimary"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/display_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_edit"
                android:layout_toRightOf="@+id/textView1"
                android:text="0.00"
                android:textSize="22sp" 
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/view1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_activity_recycler_view"
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_split_bill"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card2" />

        <TextView
            android:id="@+id/empty_view_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="no_data"
            android:visibility="gone" />

    </android.support.v7.widget.CardView>
</RelativeLayout>
